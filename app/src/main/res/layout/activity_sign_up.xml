<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/distance_35dp">

                <android.support.v7.widget.CardView
                    android:background="@drawable/bg_round_corner_edittext_white_background"
                    android:id="@+id/cardView"
                    android:layout_width="@dimen/size_359dp"
                    android:layout_height="@dimen/size_357dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/distance_8dp"
                    android:layout_marginTop="@dimen/distance_16dp"
                    app:cardCornerRadius="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/distance_32dp"
                            android:text="@string/text_login"
                            android:textColor="@color/lightNavyTwo"
                            android:textSize="@dimen/text_22sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_username"
                            android:layout_width="@dimen/size_319dp"
                            android:layout_height="@dimen/size_40dp"
                            android:layout_marginTop="@dimen/distance_32dp"
                            android:background="@drawable/bg_round_corner_edittext_white_background"
                            android:drawablePadding="@dimen/distance_10dp"
                            android:ellipsize="end"
                            android:hint="@string/text_username"
                            android:inputType="text"
                            android:paddingLeft="@dimen/distance_16dp"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/text_14sp" />

                        <RelativeLayout
                            android:layout_width="@dimen/size_319dp"
                            android:layout_height="@dimen/size_40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/distance_24dp">

                            <EditText
                                android:id="@+id/et_password"
                                android:layout_width="@dimen/size_319dp"
                                android:layout_height="@dimen/size_40dp"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_round_corner_edittext_white_background"
                                android:drawablePadding="@dimen/distance_10dp"
                                android:ellipsize="end"
                                android:hint="@string/text_password"
                                android:inputType="textPassword"
                                android:paddingLeft="@dimen/distance_16dp"
                                android:paddingRight="@dimen/distance_44dp"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:textColorHint="@color/black"
                                android:textSize="@dimen/text_14sp" />


                        </RelativeLayout>

                        <Button
                            android:id="@+id/btn_login"
                            android:layout_width="@dimen/size_319dp"
                            android:layout_height="@dimen/size_42dp"
                            android:layout_marginTop="@dimen/distance_24dp"
                            android:background="@drawable/bg_round_corner_button_yellow_background"
                            android:text="@string/text_login"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_17sp" />

                        <Button
                            android:id="@+id/btn_signup"
                            android:layout_width="@dimen/size_319dp"
                            android:layout_height="@dimen/size_42dp"
                            android:layout_marginTop="@dimen/distance_10dp"
                            android:background="@drawable/bg_round_corner_button_green_background"
                            android:text="@string/text_signup"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_17sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--<ImageView-->
                    <!--android:id="@+id/img_logo"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:src="" />-->
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>